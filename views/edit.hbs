<div class="container new-content">
  <span class="text-danger">
    <small><i class="fas fa-exclamation-circle mb-3"></i>全部欄位必填</small>
  </span>
  <h2>請輸入你的支出</h2>
  <form action="/records/{{record._id}}?_method=PUT" method="POST">
    <div class="input-group my-3">
      <span class="input-group-text">名稱</span>
      <input type="text" name="name" class="form-control" value="{{record.name}}" required>
    </div>
    <div class="input-group my-3">
      <span class="input-group-text">日期</span>
      <input type="date" name="date" class="form-control" value="{{record.date}}" required>
    </div>
    <div class="input-group my-3">
      <span class="input-group-text">類別</span>
      <select class="form-control" name="categoryId" id="categoryId" required>
        {{#each categories}}
          <option value="{{this._id}}" {{#if this.selected}}selected{{/if}}>{{this.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class="input-group my-3" required>
      <span class="input-group-text">金額</span>
      <input type="number" name="amount" class="form-control" value="{{record.amount}}">
    </div>
  <button class="btn btn-dark">送出</button>
  </form>
</div>